{% extends 'base.html.twig' %}
{% set title = "Mon profil" %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="bloc_form my-5">
        <h1>{{ participant.pseudo }}</h1>
        <div class="flex my-5">
            <div class="flex mx-5">
                <img src="{{ asset('images/participant/') }}{{ participant.imageName }}" alt="" height="200"
                     width="200">
            </div>
            <div class="flex flex-col mx-5 my-2 justify-evenly">
                <p>
                    <span>Prénom :</span>
                    <span>{{ participant.prenom }}</span>
                </p>

                <p>
                    <span>Nom :</span>
                    <span>{{ participant.nom }}</span>
                </p>

                <p>
                    <span>Téléphone :</span>
                    <span>{{ participant.telephone }}</span>
                </p>

                <p>
                    <span>Email :</span>
                    <span>{{ participant.mail }}</span>
                </p>

                <p>
                    <span>Campus :</span>
                    <span>{{ participant.campus }}</span>
                </p>


            </div>
        </div>
        <div class="flex my-2">
            <a class="button" href="{{ path('sortie_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}
