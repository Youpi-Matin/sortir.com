{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid grid-cols-2 gap-1 mx-auto m-2">
        <div class="col-span-2 text-center"><h1>Afficher une sortie</h1></div>
        <div class="grid-rows-1">
            <div>Nom de La sortie: {{ sortie.nom }}</div>
            <div>Date et Heure de La sortie: {{ sortie.dateHeureDebut | date("d/m/y H:i") }}</div>

            <div>Date Limite d'inscription: {{ sortie.dateLimiteInscription | date("d/m/y") }}</div>
            <div>Nombre de places: {{ sortie.nbInscriptionsMax }}</div>
            <div>Dur√©e: {{ sortie.duree }} minutes</div>
            <div>Descriptions et infos: <p class="border border-amber-500 p-1">{{ sortie.infosSortie }}</p></div>
        </div>
        <div class="grid-rows-1">
            <div>Campus: {{ sortie.campus.nom }}</div>
            <div>
                Lieu: {{ sortie.lieu.nom }}</div>
            <div>Rue: {{ sortie.lieu.rue }}</div>
            <div>Code Postal: {{ sortie.lieu.ville.codePostal }}</div>
            <div>Latitude: {{ sortie.lieu.latitude }}</div>
            <div>Longitude: {{ sortie.lieu.longitude }}</div>

            <div>
            </div>
        </div>
        <div class="flex flex-col">
            <h1>Liste des participants inscrits:</h1>
            <table>
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Nom</th>
                </tr>
                </thead>
                <tbody>
                {% for participant in sortie.participants %}
                    <tr>
                        <td>{{ participant.pseudo }}</td>
                        <td>{{ participant.prenom ~ ' ' ~ participant.nom }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

